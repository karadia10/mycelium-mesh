{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run edge/agents (mesh run)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/mesh",
      "args": [
        "run",
        "-repo",
        "./repo",
        "-digest",
        "${input:digest}",
        "-app",
        "billing",
        "-instances",
        "2",
        "-edge",
        ":8080",
        "-nodes",
        "3"
      ]
    }
  ],
  "inputs": [
    {
      "id": "digest",
      "type": "promptString",
      "description": "Spore digest"
    }
  ]
}